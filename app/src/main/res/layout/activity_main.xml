<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.tf_web.sample01.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />

    <Button
        android:text="konashi Find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:id="@+id/btnFind"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Send Motion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnFind"
        android:layout_alignParentStart="true"
        android:id="@+id/btnSendMotion1"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Send Motion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSendMotion1"
        android:layout_alignParentStart="true"
        android:id="@+id/btnSendMotion2"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="konashi Disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSendMotion2"
        android:layout_alignParentStart="true"
        android:id="@+id/btnDisconnect"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnDisconnect"
        android:text="---"
        android:maxLines="30"
        android:id="@+id/txtLogs" />

</RelativeLayout>
